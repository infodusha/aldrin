{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "npm run build -w aldrin",
    "watch": "npm run watch -w aldrin",
    "test": "npm run test -w aldrin",
    "start:example": "run-s build start:example:run",
    "start:example:run": "npm run start -w examples/counter",
    "watch:example": "run-p watch watch:example:run",
    "watch:example:run": "cd examples/counter && nodemon src/main.ts --watch src/* --watch ../../packages/aldrin/build --delay 1"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5"
  }
}
